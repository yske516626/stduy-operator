#include<stdio.h>
void printf1(int(*p)[4], int x, int y)
{
	printf("%d %d\n", (*(p + 1))[1],  *( * (p + 1) + 1) );
	//指针变量p是&arr[1][ ]，指向的是第一行后面五个元素
	//因此和一维数组类似，*(p+row) 指第row+1行的元素整体地址
	printf("%d %d\n", (*(p + 1))[1], p[1][1]);
	//*(p+i) == p[i]
	//表示第i行所有元素的整体地址
	//也就是可以把每一行的元素都当成一个一维数组进行理解
	//而他们的数组名就是*(p+1)
	//把每一行看成一个元素，p其实就是每一行元素组成的数组名
}
int main(void)
{
	int arr[3][4] = { {1,2,3,4},{5,6,7,8},{9,8,7,6} };
	printf1(arr,3,4);
	//二维数组的数组名代表的是第一行的地址--整体
	//因此传参传过去的是第一行整体的地址
	//类似于第一行就是一个一维数组，传参传的是&arr给指针
	return 0;
}
